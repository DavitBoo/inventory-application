<h1><%= title %></h1>

<form method="POST" action="">
    <div class="">
        <label for="name">Item name:</label>
        <input id="name" class="" type="text" placeholder="Item name" name="name" required="true">/>
    </div>

    <div class="">
        <label for="description">Description:</label>
        <textarea id="description" class="form-control" type="textarea" placeholder="Description" name="description" required="true"></textarea>
    </div>

    <div class="">
        <label for="price">Price:</label>
        <input id="price" class="form-control" type="number" placeholder="Price (ej: 19.95)" name="price" required="true" />
    </div>

    <div class="">
        <label for="number-int-stock">Items in stock:</label>
        <input id="number-int-stock" class="form-control" type="number" placeholder="How many are in the stock?" name="stock" required="true" />
      </div>
      <div class="form-group">
        <label>Category:</label>
        <select id="category" class="form-control" type="select" placeholder="Select book" name="category" required="true">
            <% for (let i = 0; i < categories.length; i++) { %>
                <% let cat = categories[i]; %>
                    <option value="<%= cat._id %>">
                <%= cat.name %>
                </option>
            <% } %>
        </select>
     
    </div>
      <button class="btn btn-primary" type="submit">Submit</button>

</form>

