<div class="container create-form">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 p-3">
            <h1 class="mt-4"><%= title %></h1>
            <form method='POST' action=''>
                <div class='form-group mb-3'>
                    <label class="mb-1" for='name'>Category:</label>
                    <input id='name' class='form-control' type='text' placeholder='Introduce a category name...' name='name' required="true" value="<%= (null===category ? '' : category.name) %>" >
                </div>
                <div class='form-group mb-3'>
                    <label class="mb-1" for='description'>Description:</label>
                    <textArea id='description' class='form-control' placeholder='Introduce a category descritpion...' name='description' required='true'><%= (null===category ? '' : category.description) %></textArea>
                </div>
                <% if (null!==category) { %>
                <div class='form-group mb-3'>
                    <label class="mb-1" for="password">Password:</label>
                    <input id="password" type="password" name="password" required>
                </div>
                <% } %>
                <button class='btn btn-primary' type='submit'>Submit</button>
        </div>
    </div>
    </form>
</div>






